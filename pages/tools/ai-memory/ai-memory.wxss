/* pages/tools/ai-memory/ai-memory.wxss */
.chat-container {
    display: flex;
    flex-direction: column;
    height: 100vh;
    background: #f8f9fa;
}

.chat-list {
    flex: 1;
    padding: 24rpx;
    overflow-y: auto;
}

.message {
    display: flex;
    margin-bottom: 32rpx;
    align-items: flex-start;
}

.message.user {
    flex-direction: row-reverse;
}

.avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    overflow: hidden;
    margin: 0 24rpx;
}

.avatar image {
    width: 100%;
    height: 100%;
}

.content {
    max-width: 60%;
    padding: 24rpx;
    border-radius: 16rpx;
    font-size: 28rpx;
    line-height: 1.5;
    word-break: break-all;
}

.user .content {
    background: #07c160;
    color: #fff;
    border-radius: 16rpx 4rpx 16rpx 16rpx;
}

.ai .content {
    background: #fff;
    color: #333;
    border-radius: 4rpx 16rpx 16rpx 16rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.input-area {
    padding: 24rpx;
    background: #fff;
    border-top: 1rpx solid #eee;
    display: flex;
    align-items: center;
}

.input {
    flex: 1;
    height: 72rpx;
    background: #f5f5f5;
    border-radius: 36rpx;
    padding: 0 32rpx;
    font-size: 28rpx;
    margin-right: 24rpx;
}

.send-btn {
    width: 120rpx;
    height: 72rpx;
    background: #ddd;
    color: #fff;
    border-radius: 36rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
}

.send-btn.active {
    background: #07c160;
} 