/* pages/tools/tools.wxss */
.page {
    min-height: 100vh;
    background: #f8f9fa;
    padding: 24rpx;
}

.category-section {
    margin-bottom: 32rpx;
}

.category-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 24rpx;
    padding: 0 24rpx;
}

.tools-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24rpx;
    padding: 0 24rpx;
}

.tool-item {
    background: #fff;
    border-radius: 16rpx;
    padding: 32rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
}

.tool-item:active {
    transform: scale(0.98);
    background: #f5f5f5;
}

.tool-icon {
    width: 96rpx;
    height: 96rpx;
    margin-bottom: 16rpx;
}

.tool-icon image {
    width: 100%;
    height: 100%;
}

.tool-name {
    font-size: 32rpx;
    color: #333;
    font-weight: bold;
    margin-bottom: 8rpx;
}

.tool-desc {
    font-size: 24rpx;
    color: #666;
    text-align: center;
} 