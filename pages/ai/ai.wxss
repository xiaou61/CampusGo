/* pages/ai.wxss */
.ai-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(to bottom, #f0f7ff, #ffffff);
  box-sizing: border-box;
}

.chat-history {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
  box-sizing: border-box;
}

.daily-limit {
  text-align: center;
  padding: 16rpx;
  background-color: rgba(24, 144, 255, 0.1);
  border-radius: 12rpx;
  margin: 20rpx;
  font-size: 24rpx;
  color: #1890ff;
  border: 1rpx solid rgba(24, 144, 255, 0.2);
}

.message-item {
  display: flex;
  margin-bottom: 30rpx;
  align-items: flex-start;
  animation: fadeIn 0.3s ease-out;
}

.message-item.user-message {
  flex-direction: row-reverse;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.message-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 16rpx;
  flex-shrink: 0;
  border: 2rpx solid rgba(24, 144, 255, 0.2);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.message-item.user-message .message-avatar {
  margin-right: 0;
  margin-left: 16rpx;
  border-color: rgba(24, 144, 255, 0.4);
}

.message-avatar image {
  width: 100%;
  height: 100%;
}

.message-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.message-bubble {
  padding: 20rpx;
  border-radius: 16rpx;
  max-width: 85%;
  word-break: break-word;
  font-size: 28rpx;
  line-height: 1.6;
  position: relative;
  white-space: pre-wrap;
}

.user-bubble {
  background: linear-gradient(135deg, #1890ff, #096dd9);
  color: #fff;
  margin-left: auto;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.2);
}

.ai-bubble {
  background-color: #fff;
  color: #333;
  margin-right: auto;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.message-time {
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
  text-align: right;
  padding: 0 10rpx;
}

/* 输入区域容器 */
.input-container {
  padding: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.02);
}

/* 建议问题区域 */
.suggested-questions {
  margin-bottom: 20rpx;
}

.suggested-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
  padding-left: 10rpx;
}

.suggested-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.suggested-item {
  background-color: rgba(24, 144, 255, 0.1);
  color: #1890ff;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.suggested-item:active {
  background-color: rgba(24, 144, 255, 0.2);
  transform: scale(0.98);
}

/* 输入框区域 */
.input-area {
  display: flex;
  align-items: flex-end;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  padding: 16rpx;
  box-shadow: inset 0 2rpx 6rpx rgba(0, 0, 0, 0.02);
}

.input-text {
  flex: 1;
  min-height: 80rpx;
  max-height: 200rpx;
  padding: 16rpx;
  font-size: 28rpx;
  background-color: #fff;
  border-radius: 8rpx;
  line-height: 1.4;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.send-btn {
  width: 100rpx;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 16rpx;
  opacity: 0.5;
  flex-shrink: 0;
  background: linear-gradient(135deg, #1890ff, #096dd9);
  border-radius: 35rpx;
  transition: all 0.3s ease;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
}

.send-btn.active {
  opacity: 1;
  transform: scale(1.05);
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
}

.send-btn image {
  width: 32rpx;
  height: 32rpx;
  filter: brightness(0) invert(1);
}

.typing-cursor {
  display: inline-block;
  width: 2px;
  height: 20rpx;
  background-color: #333;
  margin-left: 4rpx;
  animation: blink 1s infinite;
}

@keyframes blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0; }
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
}

.loading-dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #1890ff;
  border-radius: 50%;
  margin: 0 6rpx;
  animation: loading 1.4s infinite ease-in-out;
}

@keyframes loading {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

/* 消息内容样式 */
.markdown-body {
  white-space: pre-wrap;
  word-break: break-word;
  font-size: 28rpx;
  line-height: 1.6;
}

.markdown-body text {
  display: block;
  white-space: pre-wrap;
  word-break: break-word;
}

/* 列表样式 */
.markdown-body ol,
.markdown-body ul {
  padding-left: 40rpx;
  margin: 16rpx 0;
}

.markdown-body ol li,
.markdown-body ul li {
  margin: 8rpx 0;
  line-height: 1.6;
}

.markdown-body ol {
  list-style-type: decimal;
}

.markdown-body ul {
  list-style-type: disc;
}

/* towxml 样式 */
.towxml {
  font-size: 28rpx;
  line-height: 1.6;
  color: inherit;
  white-space: pre-wrap;
  word-break: break-word;
}

.towxml p {
  margin: 8rpx 0;
  white-space: pre-wrap;
  word-break: break-word;
}

.towxml ol,
.towxml ul {
  padding-left: 40rpx;
  margin: 16rpx 0;
  white-space: pre-wrap;
  word-break: break-word;
}

.towxml ol li,
.towxml ul li {
  margin: 8rpx 0;
  line-height: 1.6;
  white-space: pre-wrap;
  word-break: break-word;
  display: block;
}

.towxml ol {
  list-style-type: decimal;
}

.towxml ul {
  list-style-type: disc;
}

.towxml h1,
.towxml h2,
.towxml h3,
.towxml h4,
.towxml h5,
.towxml h6 {
  margin: 24rpx 0 16rpx;
  font-weight: bold;
}

.towxml h1 { font-size: 36rpx; }
.towxml h2 { font-size: 34rpx; }
.towxml h3 { font-size: 32rpx; }
.towxml h4 { font-size: 30rpx; }
.towxml h5 { font-size: 28rpx; }
.towxml h6 { font-size: 26rpx; }

.towxml code {
  background-color: rgba(0, 0, 0, 0.05);
  padding: 2rpx 6rpx;
  border-radius: 4rpx;
  font-family: monospace;
}

.towxml pre {
  background-color: rgba(0, 0, 0, 0.05);
  padding: 16rpx;
  border-radius: 8rpx;
  overflow-x: auto;
  margin: 16rpx 0;
}

.towxml blockquote {
  border-left: 4rpx solid rgba(0, 0, 0, 0.1);
  padding-left: 16rpx;
  margin: 16rpx 0;
  color: #666;
}

.towxml table {
  border-collapse: collapse;
  width: 100%;
  margin: 16rpx 0;
}

.towxml th,
.towxml td {
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  padding: 8rpx 12rpx;
  text-align: left;
}

.towxml th {
  background-color: rgba(0, 0, 0, 0.05);
}