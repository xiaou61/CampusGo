/* pages/login/forget/fotget.wxss */
.page {
  min-height: 100vh;
  background: #f8f9fa;
}

/* 顶部导航 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: #ffffff;
  padding: calc(env(safe-area-inset-top) + 20rpx) 32rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.back-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-btn image {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.placeholder {
  width: 48rpx;
}

/* 表单区域 */
.form-container {
  padding: 32rpx;
}

.input-group {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.input-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.input-wrapper input {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  padding: 16rpx 0;
}

.input-toggle {
  position: absolute;
  right: 24rpx;
  top: 30%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #666;
  z-index: 10;
}


.placeholder {
  color: #999;
}


/* 验证码按钮 */
.code-wrapper {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.code-btn {
  font-size: 28rpx;
  color: #4facfe;
  padding: 12rpx 32rpx;
  background: rgba(79, 172, 254, 0.1);
  border-radius: 32rpx;
  white-space: nowrap;
}

.code-btn.disabled {
  opacity: 0.5;
  background: #f5f6f7;
  color: #999;
}

/* 密码显示按钮 */
.eye-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.eye-btn image {
  width: 50rpx;
  height: 50rpx;
  opacity: 0.6;
}

/* 提交按钮 */
.submit-btn {
  margin-top: 48rpx;
  font-size: 32rpx;
  color: #ffffff;
  padding: 24rpx;
  background: linear-gradient(to right, #4facfe, #00f2fe);
  border-radius: 16rpx;
  text-align: center;
}

.submit-btn.disabled {
  opacity: 0.5;
  background: #ccc;
}

/* 提示文本 */
.tips {
  margin-top: 24rpx;
  text-align: center;
}

.tips text {
  font-size: 24rpx;
  color: #999;
}