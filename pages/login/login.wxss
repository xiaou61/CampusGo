/* 页面容器 */
.login-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #91b4ff 0%, #e2f5ff 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 40rpx;
}
.logo {
  position: absolute;
  top: 140rpx;
  width: 50%;
  height: 120rpx;
  z-index: 2;
}
/* 登录容器 */
.login-container {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 40rpx;
  box-shadow: 0 40rpx 80rpx rgba(0, 0, 0, 0.1);
  padding: 80rpx;
  width: 90%;
  max-width: 800rpx;
  animation: slideUp 0.6s ease-out;
  backdrop-filter: blur(10px);
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 登录头部 */
.login-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  display: block;
  color: #333;
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.subtitle {
  display: block;
  color: #666;
  font-size: 28rpx;
}

/* 表单组 */
.form-group {
  margin-bottom: 40rpx;
  position: relative;
}

.label {
  display: block;
  margin-bottom: 16rpx;
  color: #555;
  font-weight: 500;
  font-size: 28rpx;
}

/* 输入框 */
.input {
  width: 100%;
  height: 100rpx;
  padding: 24rpx 32rpx;
  border: 4rpx solid #e1e5e9;
  border-radius: 20rpx;
  font-size: 32rpx;
  background: #f8f9fa;
  box-sizing: border-box;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.input:focus {
  border-color: #667eea;
  background: white;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.1);
  transform: translateY(-2rpx);
}

.input.error {
  border-color: #e74c3c;
  background: #fdf2f2;
}

.input::placeholder {
  color: #999;
}

/* 密码输入框容器 */
.password-wrapper {
  position: relative;
}

.password-toggle {
  position: absolute;
  right: 24rpx;
  top: 30%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #666;
  z-index: 10;
}

/* 错误信息 */
.error-message {
  color: #e74c3c;
  font-size: 24rpx;
  margin-top: 10rpx;
  display: block;
}

/* 表单选项 */
.form-options {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 50rpx;
  font-size: 28rpx;
}

.remember-me {
  display: flex;
  align-items: center;
}

.remember-me-checkbox {
  margin-right: 16rpx;
  transform: scale(0.8);
}

.forgot-password {
  color: #667eea;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  padding: 28rpx;
  background: linear-gradient(135deg, #91b4ff 0%, #2eb4fc 100%);
  color: white;
  border: none;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 16rpx rgba(102, 126, 234, 0.2);
  margin: 0;
  line-height: normal;
}

.login-btn::after {
  border: none;
}

.login-btn.loading {
  opacity: 0.8;
}

.login-btn.disabled {
  opacity: 0.6;
}

.btn-content {
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid transparent;
  border-top: 4rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}


/* 响应式设计 */
@media (max-width: 750rpx) {
  .login-container {
    padding: 60rpx 40rpx;
    width: 95%;
  }

  .title {
    font-size: 40rpx;
  }

  .form-options {
    flex-direction: column;
    gap: 30rpx;
    align-items: flex-start;
  }

  .social-login {
    flex-direction: column;
  }
}

@media (max-width: 600rpx) {
  .login-page {
    padding: 20rpx;
  }

  .login-container {
    padding: 40rpx 30rpx;
  }

  .title {
    font-size: 36rpx;
  }

  .subtitle {
    font-size: 24rpx;
  }
}

/* 小程序特定样式 */
.login-page-wrapper {
  height: 100%;
  background: linear-gradient(135deg, #91b4ff 0%, #e2f5ff 100%);
}

/* 表单重置 */
.login-form {
  width: 100%;
}

/* 输入框聚焦状态 */
.input-focus {
  border-color: #667eea !important;
  background: white !important;
}

/* 动画优化 */
@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.login-container {
  will-change: transform, opacity;
  animation: slideUp 0.6s ease-out, fadeIn 0.6s ease-out;
}

.spinner {
  will-change: transform;
  animation: spin 1s linear infinite;
}

/* 触摸反馈 */
.password-toggle:active,
.forgot-password:active,
.link:active {
  opacity: 0.7;
}

.social-btn:active {
  background: #f0f0f0;
  transform: scale(0.98);
}

.login-btn:active {
  transform: scale(0.98) translateY(2rpx);
  box-shadow: 0 4rpx 8rpx rgba(102, 126, 234, 0.1);
}

.button-hover {
  opacity: 0.9;
  transform: scale(0.98);
}

.link-hover {
  opacity: 0.7;
}