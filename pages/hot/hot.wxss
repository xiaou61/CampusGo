/* pages/hot/hot.wxss */
.page {
    min-height: 100vh;
    background: #f8f9fa;
}

/* 分类导航 */
.category-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: #fff;
    white-space: nowrap;
    padding: 12rpx 24rpx;
    border-bottom: 1rpx solid #eee;
}

.category-item {
    display: inline-block;
    padding: 12rpx 24rpx;
    margin-right: 24rpx;
    font-size: 28rpx;
    color: #666;
    border-radius: 32rpx;
    background: #f5f5f5;
}

.category-item.active {
    color: #fff;
    background: #07c160;
}

/* 热榜列表 */
.hot-list {
    margin-top: 88rpx;
    height: calc(100vh - 88rpx);
}

.hot-section {
    margin: 24rpx;
    background: #fff;
    border-radius: 16rpx;
    overflow: hidden;
}

.section-header {
    display: flex;
    align-items: center;
    padding: 24rpx;
    border-bottom: 1rpx solid #f5f5f5;
}

.section-header .icon {
    width: 48rpx;
    height: 48rpx;
    margin-right: 16rpx;
}

.section-header .name {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
}

.section-header .update-time {
    margin-left: auto;
    font-size: 24rpx;
    color: #999;
}

.section-content {
    padding: 0 24rpx;
}

.hot-item {
    display: flex;
    align-items: center;
    padding: 24rpx 0;
    border-bottom: 1rpx solid #f5f5f5;
}

.hot-item:last-child {
    border-bottom: none;
}

.hot-item .rank {
    width: 48rpx;
    font-size: 32rpx;
    font-weight: bold;
    color: #999;
    text-align: center;
}

.hot-item .rank.top {
    color: #ff4d4f;
}

.hot-item .title {
    flex: 1;
    font-size: 28rpx;
    color: #333;
    margin: 0 24rpx;
}

.hot-item .count {
    font-size: 24rpx;
    color: #999;
}

/* 置顶标记样式 */
.hot-item .count:first-of-type {
    color: #ff4d4f;
    background: rgba(255, 77, 79, 0.1);
    padding: 4rpx 12rpx;
    border-radius: 8rpx;
}

/* 二维码弹窗样式 */
.qrcode-modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.6);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
}

.qrcode-content {
    width: 560rpx;
    background: #fff;
    border-radius: 16rpx;
    overflow: hidden;
}

.qrcode-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24rpx;
    border-bottom: 1rpx solid #f5f5f5;
}

.qrcode-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
}

.qrcode-close {
    font-size: 40rpx;
    color: #999;
    padding: 0 20rpx;
}

.qrcode-body {
    padding: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.qrcode-image {
    width: 400rpx;
    height: 400rpx;
    margin-bottom: 24rpx;
}

.qrcode-tip {
    font-size: 28rpx;
    color: #666;
}